---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <div class="flex items-center justify-center min-h-screen bg-transparent">
        <div
            class="w-full max-w-md mx-4 p-8 bg-[#1e1e2e] rounded-lg shadow-lg border-2 border-[#cba6f7]"
        >
            <h2 class="text-2xl font-bold text-center mb-8 text-[#cdd6f4]">
                Sign Up / Log In
            </h2>

            <form class="space-y-6">
                <div>
                    <label
                        for="email"
                        class="block text-sm font-medium text-[#cdd6f4] mb-2"
                    >
                        Email
                    </label>
                    <input
                        type="email"
                        id="email"
                        required
                        class="w-full px-3 py-2 bg-[#11111b] border border-[#cdd6f4] rounded-md focus:outline-none focus:ring-2 focus:ring-[#8839ef] text-[#cdd6f4]"
                    />
                </div>

                <div>
                    <label
                        for="password"
                        class="block text-sm font-medium text-[#cdd6f4] mb-2"
                    >
                        Password
                    </label>
                    <input
                        type="password"
                        id="password"
                        required
                        class="w-full px-3 py-2 bg-[#11111b] border border-[#cdd6f4] rounded-md focus:outline-none focus:ring-2 focus:ring-[#8839ef] text-[#cdd6f4]"
                    />
                </div>

                <div class="flex justify-between gap-4 pt-2">
                    <button
                        type="submit"
                        class="w-full px-4 py-2 bg-[#89dceb] text-[#11111b] rounded-md"
                    >
                        Sign Up
                    </button>
                    <button
                        type="submit"
                        class="w-full px-4 py-2 bg-[#a6e3a1] text-[#11111b] rounded-md"
                    >
                        Sign In
                    </button>
                </div>
            </form>
        </div>
    </div>
</Layout>
