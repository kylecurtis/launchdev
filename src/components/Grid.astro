---
import LanguageCard from "./LanguageCard.astro";

const languages = [
    { name: "Python", icon: "vscode-icons:file-type-python" },
    { name: "Go", icon: "vscode-icons:file-type-go-gopher" },
    { name: "C", icon: "vscode-icons:file-type-c" },
    { name: "C++", icon: "vscode-icons:file-type-cpp3" },
    { name: "C#", icon: "vscode-icons:file-type-csharp2" },
    { name: "PHP", icon: "vscode-icons:file-type-php" },
    { name: "Swift", icon: "vscode-icons:file-type-swift" },
    { name: "Java", icon: "vscode-icons:file-type-java" },
    { name: "Rust", icon: "vscode-icons:file-type-rust" },
    { name: "Zig", icon: "vscode-icons:file-type-zig" },
    { name: "JavaScript", icon: "vscode-icons:file-type-js-official" },
    { name: "TypeScript", icon: "vscode-icons:file-type-typescript-official" },
    { name: "Lua", icon: "vscode-icons:file-type-lua" },
    { name: "HTML", icon: "vscode-icons:file-type-html" },
    { name: "CSS", icon: "vscode-icons:file-type-css2" },
    { name: "Scala", icon: "vscode-icons:file-type-scala" },
    { name: "Kotlin", icon: "vscode-icons:file-type-kotlin" },
    { name: "Julia", icon: "vscode-icons:file-type-julia" },
    { name: "Ocaml", icon: "vscode-icons:file-type-ocaml" },
    { name: "Dart", icon: "vscode-icons:file-type-dartlang" },
];
---

<div
    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 py-12 mx-4"
>
    {
        languages.map((language) => (
            <LanguageCard icon={language.icon} name={language.name} />
        ))
    }
</div>
